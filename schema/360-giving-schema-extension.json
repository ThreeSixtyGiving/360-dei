{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "DEI_Answer": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "asked_status": {
            "title": "Asked Status",
            "description": "How was this question asked?",
            "type": "string",
            "codelist": "askedStatus.csv"
          },
          "available_options": {
            "title": "Available Options",
            "description": "Which options were available when the question was asked?",
            "type": "array",
            "items": {
              "type": "string",
              "codelist": "availableOptions.csv"
            }
          },
          "reply_status": {
            "title": "Reply Status",
            "type": "string",
            "codelist": "replyStatus.csv"
          },
          "codes": {
            "title": "Taxonomy Codes",
            "type": "array",
            "items": {
              "type": "string",
              "INSERT_ENUM_OF_ALL_CODES_HERE": true
            }
          },
          "classification_entered": {
            "title": "Classification Entered",
            "description": "Classifications provided that are not from a vocabulary like Lived Experience can be entered here.",
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "location": {
            "type": "array",
            "INSERT_LOCATION_BLOCK_AS_ITEMS_HERE": true
          }
        },
        "additionalProperties": false
      }
    },
    "Organization": {
      "properties": {
        "mission": {
          "$ref": "#/definitions/DEI_Answer",
          "title": "Information about the mission of this organisation"
        },
        "leadership": {
          "$ref": "#/definitions/DEI_Answer",
          "title": "Information about the leadership of this organisation"
        }
      }
    }
  },
  "properties": {
    "beneficiaries": {
      "$ref": "#/definitions/DEI_Answer",
      "title": "Information about the beneficiaries"
    }
  }
}