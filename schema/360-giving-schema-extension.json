{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "DEI_Classification": {
      "type": "object",
      "properties": {
          "vocabulary": {
            "type": "string",
            "description": "A vocabulary used for this classification.",
            "title": "Vocabulary"
          },
          "code": {
            "type": "string",
            "description": "A codelist value in the chosen vocabulary.",
            "title": "Code"
          },
          "title": {
            "type": [
              "string",
              "null"
            ],
            "description": "The title of this classification.",
            "title": "Title"
          },
          "description": {
            "type": [
              "string",
              "null"
            ],
            "description": "A description of this classification.",
            "title": "Description"
          }
      },
      "required": [
        "vocabulary",
        "code"
      ]
    },
    "DEI_Answer": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "dei_purposes": {
            "title": "Purposes of data collection",
            "type": "string"
          },
          "dei_asked_status": {
            "title": "Asked Status",
            "description": "How was this question asked?",
            "type": "string",
            "codelist": "askedStatus.csv"
          },
          "dei_available_options": {
            "title": "Available Options",
            "description": "Which options were available when the question was asked?",
            "type": "array",
            "items": {
              "type": "string",
              "codelist": "availableOptions.csv"
            }
          },
          "dei_classification_available_options": {
            "title": "Classifications from Taxonomies available options",
            "description": "Classifications from Taxonomies which were available when the question was asked?",
            "type": "array",
            "items": {
              "$ref": "#/definitions/Classification"
            }
          },
          "dei_reply_status": {
            "title": "Reply Status",
            "type": "string",
            "codelist": "replyStatus.csv"
          },
          "classification": {
            "title": "Classification from Taxonomies",
            "type": "array",
            "items": {
              "$ref": "#/definitions/Classification"
            }
          },
          "classification_entered": {
            "title": "Classification Entered",
            "description": "Classifications provided that are not from a vocabulary like Lived Experience can be entered here.",
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "location": {
            "title": "Locations",
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "description": {
                  "type": "string",
                  "description": "A description of this location.",
                  "title": "Description"
                }
              },
              "required": ["description"]
            },
            "rollUp": ["description"]
          }
        },
        "additionalProperties": false
      },
      "rollUp": ["dei_purposes","dei_asked_status","dei_available_options","dei_reply_status","classification_entered","location/0/description"]
    },
    "Organization": {
      "properties": {
        "mission": {
          "$ref": "#/definitions/DEI_Answer",
          "title": "Information about the mission of this organisation"
        },
        "leadership": {
          "$ref": "#/definitions/DEI_Answer",
          "title": "Information about the leadership of this organisation"
        }
      }
    }
  },
  "properties": {
    "project": {
      "$ref": "#/definitions/DEI_Answer",
      "title": "Information about the project"
    }
  }
}
